<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5F5F5F"
    tools:context=".MainActivity">


    <TableLayout
        android:id="@+id/board"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/board"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TableRow android:id="@+id/rankH" android:layout_weight="1" android:layout_height="match_parent"/>
        <TableRow android:id="@+id/rankG" android:layout_weight="1" android:layout_height="match_parent"/>
        <TableRow android:id="@+id/rankF" android:layout_weight="1" android:layout_height="match_parent"/>
        <TableRow android:id="@+id/rankE" android:layout_weight="1" android:layout_height="match_parent"/>
        <TableRow android:id="@+id/rankD" android:layout_weight="1" android:layout_height="match_parent"/>
        <TableRow android:id="@+id/rankC" android:layout_weight="1" android:layout_height="match_parent"/>
        <TableRow android:id="@+id/rankB" android:layout_weight="1" android:layout_height="match_parent"/>
        <TableRow android:id="@+id/rankA" android:layout_weight="1" android:layout_height="match_parent"/>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>